@model YourHelp_MVC.Models.OfertaModel

@{
    ViewBag.Title = "Create";
}

<h2>Adauga oferta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.oferta.id_persoana, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.oferta.id_persoana, new SelectList(Model.persoane, "id", "prenume", Model.oferta.id_persoana), new { @class = "form-control" })
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.oferta.id_serviciu, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.oferta.id_serviciu, new SelectList(Model.servicii, "id_serviciu", "nume_serviciu", Model.oferta.id_serviciu), new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.oferta.is_valid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.oferta.is_valid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.oferta.is_valid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adauga" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}